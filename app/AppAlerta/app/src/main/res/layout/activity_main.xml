<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:scrollbarSize="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout">
                <TextView android:text="Informar  Evento"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/header"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_around"
                    android:text="Lluvia - Inundación - HUAYCO"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/btnLluvia"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_around"
                    android:padding="20dp"
                    android:text="Dengue- Colera - CONJUNTIVITIS - MALARIA"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/btnEpidemia"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_around"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Carretera/Puente Cerrado"
                    android:id="@+id/btnCarretera"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_around"
                    android:padding="20dp"
                    android:text="HELADA - GRANIZO"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/btnAlimento"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_around"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="SEQUIA - INCENDIO" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_around"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="RED DE AGUA Y DESAGUE CORTADA" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView android:text="Información de Emergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tviInfo"
        />
</RelativeLayout>
